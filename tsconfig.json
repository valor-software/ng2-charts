{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": ["dom", "es6"],
    "types": [
      "jasmine",
      "node",
      "webpack"
    ]
  },
  "exclude": [
    "node_modules", "bundles", "dist"
  ],
  "files": [
    "./demo/custom-typings.d.ts",
    "./ng2-charts.ts"
  ],
  "atom": { "rewriteTsconfig": false }
}
